# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# Google OAuth Configuration (Required for authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database Configuration (Development & Test)
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_HOSTNAME=localhost
DB_NAME=techvital_hub_dev
DB_POOL_SIZE=10

# Application Configuration
PORT=4000
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret
LIVE_VIEW_SIGNING_SALT=generate_with_mix_phx_gen_secret

# Production Configuration (when deploying)
DATABASE_URL=ecto://username:password@hostname/database_name
PHX_HOST=your-domain.com
PHX_SERVER=true

# Optional: DNS Cluster (for distributed deployments)
DNS_CLUSTER_QUERY=
ECTO_IPV6=false
